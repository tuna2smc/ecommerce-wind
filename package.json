{
  "name": "@windcommerce/theme-ecommerce",
  "version": "0.0.41",
  "author": {
    "name": "Nguyen Anh Tu",
    "email": "tuna9x.it@gmail.com"
  },
  "contributors": [
    {
      "name": "Nguyen Anh Tu",
      "email": "tuna9x.it@gmail.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14.18.0",
    "npm": ">=6.14.12"
  },
  "dependencies": {
    "@windcommerce/ecommerce-wind-builder": "^1.1.0"
  },
  "scripts": {
    "build": "npx postcss tailwind-source.css -o tailwind-output.css --minify",
    "watch:dev": "npx postcss tailwind-source.css -o ../css/styles.css --watch --verbose",
    "watch": "NODE_ENV=development TAILWIND_COMPILE_MODE=jit TAILWIND_MODE=watch ",
    "build-dev": "NODE_ENV=development run-p build && cp tailwind-output.css ../css/styles.css",
    "build-prod": "NODE_ENV=production run-p build minify output",
    "bs": "browser-sync start --config ./browser-sync.config.js",
    "bs-watch": "PORT=3200 PROXY_URL='https://app.contribution.test/' run-p bs",
    "minify": "npx csso tailwind-output.css --output ../css/styles.css",
    "output": "echo \"\\033[0;32mDone!\\033[0m\"",
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "npm run dev",
    "build2": "node build/build.js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
